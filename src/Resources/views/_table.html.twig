<table class="table grid-table">
    {% if head and paginate is defined and pagination.getTotalItemCount %}
        <thead>
        <tr>
            {% for h in head %}
                {% if h.sortable %}
                    <th{% if pagination.isSorted('o.' ~ h.attr) %} class="sorted sorted-{{ pagination.direction }}"{% endif %}>
                        {{ knp_pagination_sortable(pagination, h.title, 'o.' ~ h.attr)|raw }}
                    </th>
                {% else %}
                    <th>
                        {{ h.title }}
                    </th>
                {% endif %}
            {% endfor %}
        </tr>
        </thead>
    {% endif %}
    {% if body %}
        <tbody>
        {% for row in body %}
            <tr {% for attrname, attrvalue in row.attr -%}
            {{ attrname }}="{{ attrvalue }}"
        {%- endfor %}
            >
            {% for field in row.values %}
                <td>{{ field|raw }}</td>
            {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    {% else %}
        <h4>Nothing found...</h4>
    {% endif %}
</table>
